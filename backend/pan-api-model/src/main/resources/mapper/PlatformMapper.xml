<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.github.panjung99.panapi.model.dao.PlatformMapper">

    <!-- 映射结果 -->
    <resultMap id="BaseResultMap" type="io.github.panjung99.panapi.model.entity.ModelType">
        <id column="id"              property="id" />
        <result column="code"        property="code" />
        <result column="name"        property="name" />
        <result column="description" property="description" />
        <result column="icon_url"    property="iconUrl" />
        <result column="is_deleted"  property="isDeleted" />
        <result column="created_at"  property="createdAt" />
        <result column="updated_at"  property="updatedAt" />
    </resultMap>

    <!-- 查询全部 -->
    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM md_platform WHERE is_deleted = 0
    </select>

    <!-- 按 ID 查询 -->
    <select id="findById" parameterType="long" resultMap="BaseResultMap">
        SELECT * FROM md_platform WHERE id = #{id} AND is_deleted = 0
    </select>

    <!-- 插入 -->
    <insert id="insert" parameterType="io.github.panjung99.panapi.model.entity.ModelType" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO md_platform
            (code, name, description, icon_url, is_deleted, created_at, updated_at)
        VALUES
            (#{code}, #{name}, #{description}, #{iconUrl}, #{isDeleted}, NOW(), NOW())
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="io.github.panjung99.panapi.model.entity.ModelType">
        UPDATE md_platform
        SET
            code = #{code},
            name = #{name},
            description = #{description},
            icon_url = #{iconUrl},
            updated_at = NOW()
        WHERE id = #{id} AND is_deleted = 0
    </update>

    <!-- 逻辑删除 -->
    <update id="softDelete" parameterType="long">
        UPDATE md_platform
        SET is_deleted = 1,
            updated_at = NOW()
        WHERE id = #{id}
    </update>

</mapper>
