<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.panjung99.panapi.model.dao.PricingItemMapper">

    <resultMap id="BaseResultMap" type="io.github.panjung99.panapi.model.entity.PricingItem">
        <id column="id" property="id" />
        <result column="model_id" property="modelId" />
        <result column="unit" property="unit" />
        <result column="price_input" property="priceInput" />
        <result column="price_output" property="priceOutput" />
        <result column="currency" property="currency" />
        <result column="is_active" property="isActive" />
        <result column="is_deleted" property="isDeleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <sql id="Base_Column_List">
        id, model_id, unit, price_input, price_output,
        currency, is_active, is_deleted, created_at, updated_at
    </sql>

    <select id="selectByModelId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM md_pricing_item
        WHERE model_id = #{modelId} AND is_deleted = 0 AND is_active = 1
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO md_pricing_item
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="modelId != null">model_id,</if>
            <if test="unit != null">unit,</if>
            <if test="priceInput != null">price_input,</if>
            <if test="priceOutput != null">price_output,</if>
            <if test="currency != null">currency,</if>
            <if test="isActive != null">is_active,</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="modelId != null">#{modelId},</if>
            <if test="unit != null">#{unit},</if>
            <if test="priceInput != null">#{priceInput},</if>
            <if test="priceOutput != null">#{priceOutput},</if>
            <if test="currency != null">#{currency},</if>
            <if test="isActive != null">#{isActive},</if>
        </trim>
    </insert>

    <insert id="batchInsert">
        INSERT INTO md_pricing_item (model_id, unit, price_input, price_output, currency)
        VALUES
        <foreach collection="list" item="item" separator=",">
            (#{item.modelId}, #{item.unit}, #{item.priceInput}, #{item.priceOutput}, #{item.currency})
        </foreach>
    </insert>

    <update id="updatePrice">
        UPDATE md_pricing_item
        <set>
            <if test="priceInput != null">price_input = #{priceInput},</if>
            <if test="priceOutput != null">price_output = #{priceOutput},</if>
            <if test="unit != null">unit = #{unit},</if>
            <if test="isActive != null">is_active = #{isActive},</if>
            updated_at = NOW()
        </set>
        WHERE id = #{id} AND is_deleted = 0
    </update>

    <update id="softDeleteByModelId">
        UPDATE md_pricing_item
        SET is_deleted = 1, updated_at = NOW()
        WHERE model_id = #{modelId}
    </update>

    <update id="softDelete">
        UPDATE md_pricing_item
        SET is_deleted = 1, updated_at = NOW()
        WHERE id = #{id}
    </update>

</mapper>