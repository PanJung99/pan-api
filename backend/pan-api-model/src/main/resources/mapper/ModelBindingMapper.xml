<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.github.panjung99.panapi.model.dao.ModelBindingMapper">

    <resultMap id="BaseResultMap"
               type="io.github.panjung99.panapi.model.entity.ModelBinding">
        <id column="id"                property="id"/>
        <result column="model_id"      property="modelId"/>
        <result column="ven_model_id"  property="venModelId"/>
        <result column="is_active"       property="isActive"/>
        <result column="created_at"    property="createdAt"/>
        <result column="updated_at"    property="updatedAt"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        model_id,
        ven_model_id,
        is_active,
        created_at,
        updated_at
    </sql>


    <!-- 插入 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO md_model_binding
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="modelId != null">model_id,</if>
            <if test="venModelId != null">ven_model_id,</if>
            <if test="isActive != null">is_active,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="modelId != null">#{modelId},</if>
            <if test="venModelId != null">#{venModelId},</if>
            <if test="isActive != null">#{isActive},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
        </trim>
    </insert>

    <!-- 更新启用状态 -->
    <update id="updateEnabled">
        UPDATE md_model_binding
        SET is_active = #{isActive}, updated_at = #{updatedAt}
        WHERE id = #{id}
    </update>

    <!-- 删除模型下全部绑定 -->
    <delete id="deleteByModelId" parameterType="long">
        DELETE FROM md_model_binding WHERE model_id = #{modelId}
    </delete>

    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="long" resultType="io.github.panjung99.panapi.model.entity.ModelBinding">
        SELECT <include refid="Base_Column_List" />
        FROM md_model_binding
        WHERE id = #{id}
    </select>

    <!-- 根据 modelId 查询 -->
    <select id="selectByModelId" parameterType="long" resultType="io.github.panjung99.panapi.model.entity.ModelBinding">
        SELECT <include refid="Base_Column_List" />
        FROM md_model_binding
        WHERE model_id = #{modelId} AND is_active = 1
    </select>

    <!-- 根据 modelId 查询 -->
    <select id="selectAllByModelId" parameterType="long" resultType="io.github.panjung99.panapi.model.entity.ModelBinding">
        SELECT <include refid="Base_Column_List" />
        FROM md_model_binding
        WHERE model_id = #{modelId}
    </select>

</mapper>
