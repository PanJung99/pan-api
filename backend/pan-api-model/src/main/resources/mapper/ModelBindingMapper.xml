<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.github.panjung99.panapi.model.dao.ModelBindingMapper">

    <resultMap id="BaseResultMap"
               type="io.github.panjung99.panapi.model.entity.ModelBinding">
        <id column="id"                property="id"/>
        <result column="model_id"      property="modelId"/>
        <result column="ven_model_id"  property="venModelId"/>
        <result column="enabled"       property="enabled"/>
        <result column="created_at"    property="createdAt"/>
        <result column="updated_at"    property="updatedAt"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,
        model_id,
        ven_model_id,
        enabled,
        created_at,
        updated_at
    </sql>


    <!-- 插入 -->
    <insert id="insert" parameterType="io.github.panjung99.panapi.model.entity.ModelBinding" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO md_model_binding (model_id, ven_model_id, enabled, created_at, updated_at)
        VALUES (#{modelId}, #{venModelId}, #{enabled}, NOW(), NOW())
    </insert>

    <!-- 更新启用状态 -->
    <update id="updateEnabled">
        UPDATE md_model_binding
        SET enabled = #{enabled}, updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteById" parameterType="long">
        DELETE FROM md_model_binding WHERE id = #{id}
    </delete>

    <!-- 删除模型下全部绑定 -->
    <delete id="deleteByModelId" parameterType="long">
        DELETE FROM md_model_binding WHERE model_id = #{modelId}
    </delete>

    <!-- 根据ID查询 -->
    <select id="selectById" parameterType="long" resultType="io.github.panjung99.panapi.model.entity.ModelBinding">
        SELECT <include refid="Base_Column_List" />
        FROM md_model_binding
        WHERE id = #{id}
    </select>

    <!-- 根据 modelId 查询 -->
    <select id="selectByModelId" parameterType="long" resultType="io.github.panjung99.panapi.model.entity.ModelBinding">
        SELECT <include refid="Base_Column_List" />
        FROM md_model_binding
        WHERE model_id = #{modelId} AND enabled = 1
    </select>

    <!-- 根据 ven_model_id 查询 -->
    <select id="selectByVenModelId" parameterType="long" resultType="io.github.panjung99.panapi.model.entity.ModelBinding">
        SELECT <include refid="Base_Column_List" />
        FROM md_model_binding
        WHERE ven_model_id = #{venModelId} AND enabled = 1
    </select>

    <!-- 根据 modelId + ven_model_id 查询 -->
    <select id="selectByModelAndVendor" resultType="io.github.panjung99.panapi.model.entity.ModelBinding">
        SELECT <include refid="Base_Column_List" />
        FROM md_model_binding
        WHERE model_id = #{modelId} AND ven_model_id = #{venModelId}
    </select>

</mapper>
