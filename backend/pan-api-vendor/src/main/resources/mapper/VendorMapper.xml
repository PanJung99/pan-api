<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.panjung99.panapi.vendor.dao.VendorMapper">

    <resultMap id="BaseResultMap" type="io.github.panjung99.panapi.vendor.entity.Vendor">
        <id column="id"               property="id" />
        <result column="name"         property="name" />
        <result column="ven_type"     property="venType" />
        <result column="api_base_url" property="apiBaseUrl" />
        <result column="is_deleted"   property="isDeleted" />
        <result column="created_at"   property="createdAt" />
        <result column="updated_at"   property="updatedAt" />
    </resultMap>

    <resultMap id="VendorTokenReqMap" type="io.github.panjung99.panapi.common.dto.admin.VendorTokenReq">
        <id column="token_id"       property="id"/>
        <result column="vendor_id"  property="vendorId"/>
        <result column="api_key"    property="apiKey"/>
        <result column="token_name" property="tokenName"/>
        <result column="is_active"  property="isActive"/>
    </resultMap>

    <resultMap id="VendorReq" type="io.github.panjung99.panapi.common.dto.admin.VendorResp">
        <id column="vendor_id"        property="id"/>
        <result column="vendor_name"  property="name"/>
        <result column="api_base_url" property="apiBaseUrl"/>
        <result column="ven_type"     property="venType"/>

        <!-- 一对多 -->
        <collection property="tokens"
                    ofType="io.github.panjung99.panapi.common.dto.admin.VendorTokenReq"
                    resultMap="VendorTokenReqMap"
                    notNullColumn="token_id"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, ven_type, api_base_url,
        is_deleted, created_at, updated_at
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ven_vendor
        WHERE id = #{id} AND is_deleted = 0
    </select>

    <select id="selectAllActive" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ven_vendor
        WHERE is_deleted = 0
    </select>

    <!-- 联合查询 -->
    <select id="selectVendorsWithTokens" resultMap="VendorReq">
        SELECT
            v.id AS vendor_id,
            v.name AS vendor_name,
            v.api_base_url,
            v.ven_type,

            t.id AS token_id,
            t.vendor_id,
            t.api_key,
            t.token_name,
            t.is_active
        FROM ven_vendor v
                 LEFT JOIN ven_vendor_token t
                           ON v.id = t.vendor_id
        WHERE v.is_deleted = 0
        ORDER BY v.id, t.id
    </select>

    <insert id="insert" parameterType="io.github.panjung99.panapi.vendor.entity.Vendor"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ven_vendor
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="venType != null">ven_type,</if>
            <if test="apiBaseUrl != null">api_base_url,</if>
            <if test="isDeleted != null">is_deleted,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="venType != null">#{venType},</if>
            <if test="apiBaseUrl != null">#{apiBaseUrl},</if>
            <if test="isDeleted != null">#{isDeleted},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
        </trim>
    </insert>

    <update id="updateBalance">
        UPDATE ven_vendor
        SET
            balance = #{newBalance},
            updated_at = NOW()
        WHERE id = #{id} AND is_deleted = 0
    </update>

    <update id="logicalDelete">
        UPDATE ven_vendor
        SET
            is_deleted = 1,
            updated_at = NOW()
        WHERE id = #{id}
    </update>

</mapper>