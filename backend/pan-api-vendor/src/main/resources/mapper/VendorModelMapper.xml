<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.panjung99.panapi.vendor.dao.VendorModelMapper">

    <resultMap id="BaseResultMap" type="io.github.panjung99.panapi.vendor.entity.VendorModel">
        <id column="id" property="id" />
        <result column="vendor_id" property="vendorId" />
        <result column="name" property="name" />
        <result column="is_deleted" property="isDeleted" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>

    <sql id="Base_Column_List">
        id, vendor_id, name, is_deleted,
        created_at, updated_at
    </sql>

    <select id="selectById" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ven_model
        WHERE id = #{id} AND is_deleted = 0
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ven_model
        WHERE is_deleted = 0
    </select>

    <select id="selectAllByVendorId" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ven_model
        WHERE vendor_id = #{vendorId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO ven_model
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="vendorId != null">vendor_id,</if>
            <if test="name != null and name != ''">name,</if>
            <if test="isDeleted != null">is_deleted,</if>
            <if test="createdAt != null">created_at,</if>
            <if test="updatedAt != null">updated_at,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="vendorId != null">#{vendorId},</if>
            <if test="name != null and name != ''">#{name},</if>
            <if test="isDeleted != null">#{isDeleted},</if>
            <if test="createdAt != null">#{createdAt},</if>
            <if test="updatedAt != null">#{updatedAt},</if>
        </trim>
    </insert>

    <update id="update">
        UPDATE ven_model
        <set>
            <if test="vendorId != null">vendor_id = #{vendorId},</if>
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="isDeleted != null">is_deleted = #{isDeleted},</if>
            <if test="createdAt != null">created_at = #{createdAt},</if>
            <if test="updatedAt != null">updated_at = #{updatedAt},</if>
            <if test="updatedAt == null">updated_at = NOW(),</if>
        </set>
        WHERE id = #{id}
    </update>


    <update id="logicalDelete">
        UPDATE ven_model
        SET
            is_deleted = 1,
            updated_at = #{date}
        WHERE id = #{id}
    </update>
</mapper>