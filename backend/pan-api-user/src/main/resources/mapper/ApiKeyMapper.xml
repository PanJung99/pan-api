<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.github.panjung99.panapi.user.dao.ApiKeyMapper">

    <resultMap id="apiKeyResultMap" type="io.github.panjung99.panapi.user.entity.ApiKey">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="keyName" column="key_name"/>
        <result property="apiKey" column="api_key"/>
        <result property="deleted" column="is_deleted"/>
        <result property="createTime" column="create_time"/>
    </resultMap>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO us_api_key (
            user_id, key_name, api_key
        ) VALUES (
            #{userId}, #{keyName}, #{apiKey}
        )
    </insert>

    <update id="update">
        UPDATE us_api_key
        SET
            key_name = #{keyName},
            is_deleted = #{deleted}
        WHERE id = #{id}
    </update>

    <update id="softDelete">
        UPDATE us_api_key
        SET is_deleted = 1
        WHERE id = #{id} AND user_id = #{userId}
    </update>

    <select id="selectById" resultMap="apiKeyResultMap">
        SELECT * FROM us_api_key WHERE id = #{id}
    </select>

    <select id="selectByApiKey" resultMap="apiKeyResultMap">
        SELECT * FROM us_api_key
        WHERE api_key = #{apiKey} AND is_deleted = 0
    </select>

    <select id="selectByUserId" resultMap="apiKeyResultMap">
        SELECT * FROM us_api_key
        WHERE user_id = #{userId}
    </select>

    <select id="selectActiveKeysByUserId" resultMap="apiKeyResultMap">
        SELECT * FROM us_api_key
        WHERE user_id = #{userId}
          AND is_deleted = 0
    </select>

</mapper>