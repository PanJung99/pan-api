<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.github.panjung99.panapi.user.dao.RechargePlanMapper">

    <!-- 通用字段映射 -->
    <resultMap id="RechargePlanResult" type="io.github.panjung99.panapi.user.entity.RechargePlan">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="desc" column="desc"/>
        <result property="displayMd" column="display_md"/>
        <result property="productCode" column="product_code"/>
        <result property="isRecommend" column="is_recommend"/>
        <result property="sortOrder" column="sort_order"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- 查询单个 -->
    <select id="findById" parameterType="long" resultMap="RechargePlanResult">
        SELECT * FROM recharge_plan WHERE id = #{id}
    </select>

    <!-- 查询所有有效套餐 -->
    <select id="findAllActive" resultMap="RechargePlanResult">
        SELECT * FROM recharge_plan
        WHERE status = 1
        ORDER BY sort_order ASC, id ASC
    </select>

    <!-- 插入 -->
    <insert id="insert" parameterType="io.github.panjung99.panapi.user.entity.RechargePlan" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO recharge_plan
        (name, price, desc, display_md, product_code, is_recommend, sort_order, status)
        VALUES
            (#{name}, #{price}, #{desc}, #{displayMd}, #{productCode}, #{isRecommend}, #{sortOrder}, #{status})
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="io.github.panjung99.panapi.user.entity.RechargePlan">
        UPDATE recharge_plan
        SET
            name = #{name},
            price = #{price},
            desc = #{desc},
            display_md = #{displayMd},
            product_code = #{productCode},
            is_recommend = #{isRecommend},
            sort_order = #{sortOrder},
            status = #{status},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="delete" parameterType="long">
        DELETE FROM recharge_plan WHERE id = #{id}
    </delete>

</mapper>
